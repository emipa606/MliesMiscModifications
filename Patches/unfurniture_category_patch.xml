<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[@Name="SadjuukAllLightBase"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@Name="SadjuukAllLightBase"]/designationCategory</xpath>
        <value>
          <designationCategory>Lights</designationCategory>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[@Name="SadjuukCarpetBase" or @Name="SadjuukSurgeryBaseB" or @Name="SadjuukTableBase"  or @Name="SadjuukChairBase"  or @Name="SadjuukBedBaseA" or @Name="SadjuukBedBaseB"  or @Name="SadjuukFurnitureBaseA" or @Name="SadjuukFurnitureBaseB" ]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@Name="SadjuukCarpetBase" or @Name="SadjuukSurgeryBaseB" or @Name="SadjuukTableBase"  or @Name="SadjuukChairBase"  or @Name="SadjuukBedBaseA" or @Name="SadjuukBedBaseB"  or @Name="SadjuukFurnitureBaseA" or @Name="SadjuukFurnitureBaseB"]/designationCategory</xpath>
        <value>
          <designationCategory>Furniture</designationCategory>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[@Name="SadjuukSurgeryBaseA" or @Name="SadjuukResearchBaseB" or @Name="SadjuukBannerBase"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@Name="SadjuukSurgeryBaseA" or @Name="SadjuukResearchBaseB" or @Name="SadjuukBannerBase"]/designationCategory</xpath>
        <value>
          <designationCategory>Misc</designationCategory>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[@Name="SadjuukResearchBaseA"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@Name="SadjuukResearchBaseA"]/designationCategory</xpath>
        <value>
          <designationCategory>Production</designationCategory>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/ThingDef[@Name="SadjuukHeaterBaseA" or defName="SadjuukCoolerAA" or @Name="SadjuukCoolerBaseA" or @Name="SadjuukVentBaseA"]</xpath>
      </li>
      <li Class="PatchOperationReplace">
        <success>Always</success>
        <xpath>/Defs/ThingDef[@Name="SadjuukHeaterBaseA" or defName="SadjuukCoolerAA" or @Name="SadjuukCoolerBaseA" or @Name="SadjuukVentBaseA"]/designationCategory</xpath>
        <value>
          <designationCategory>Temperature</designationCategory>
        </value>
      </li>
    </operations>
  </Operation>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>/Defs/DesignationCategoryDef[defName="SadjuukUN-Furniture"]</xpath>
      </li>
      <li Class="PatchOperationRemove">
        <success>Always</success>
        <xpath>/Defs/DesignationCategoryDef[defName="SadjuukUN-Furniture"]</xpath>
      </li>
    </operations>
  </Operation>
</Patch>